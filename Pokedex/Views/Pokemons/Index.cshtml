@model IEnumerable<Pokedex.Models.Pokemon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Pokemon</h1>
<h4>Lista</h4>
<hr />
<p>
    <a class="btn btn-danger px-5" asp-action="Create"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
            fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
            <path
                d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
        </svg> Adicionar</a>
</p>
<table class="table table-striped" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
    using System.Formats.Tar;
            </th>
            <th>
                Tipos
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Regiao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
             <td>
                @Html.DisplayFor(modelItem => item.Numero)
             </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @string.Join(" e ", item.Tipos.Select(pt => pt.Tipo.Nome))
                </td>
              
              
                <td>
                    @Html.DisplayFor(modelItem => item.Regiao.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero.Nome)
                </td>
                
                <td>
                    <a class="text-decoration-none text-warning me-1" asp-action="Edit" asp-route-id="@item.Numero"><i class="bi bi-pencil-fill" title="alterar"></i></a> 
                    <a class="text-decoration-none me-1" asp-action="Details" asp-route-id="@item.Numero"><i class="bi bi-eye" title="detalhes"></i></a> 
                    <a class="text-decoration-none text-danger" asp-action="Delete" asp-route-id="@item.Numero"><i class="bi bi-trash2-fill" title="delete"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css">
}

@section Scripts {
    <script src="https://cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    <script>
        let table .5v3h3a=table new DataTable('#table');
    </script>
}